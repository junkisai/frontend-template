{
  "name": "@apps/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev ./src/index.ts",
    "deploy": "wrangler deploy --minify ./src/index.ts",
    "migrate:gen": "drizzle-kit generate:sqlite --config=./drizzle.config.ts",
    "migrate:apply:local": "wrangler d1 migrations apply web-app-template --local",
    "migrate:apply:remote": "wrangler d1 migrations apply web-app-template --remote",
    "lint": "conc -c auto bun:lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:biome": "biome check .",
    "lint:prettier": "prettier --check './**/*.{md,yml,yaml,json}'",
    "fmt": "conc -c auto bun:fmt:*",
    "fmt:biome": "biome format --write .",
    "fmt:prettier": "prettier -w './**/*.{md,yml,yaml,json}'"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "hono": "^4.2.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240419.0",
    "@packages/biome-config": "workspace:*",
    "@packages/prettier-config": "workspace:*",
    "@packages/tsconfig": "workspace:*",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.24.0",
    "wrangler": "^3.51.2"
  }
}
