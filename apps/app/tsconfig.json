{
  "extends": ["@packages/tsconfig/base.json"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
